{
  "$schema": "./node_modules/wrangler/config-schema.json",
  "name": "code",
  "main": "./workers/app.ts",
  "compatibility_date": "2025-04-01",
  "compatibility_flags": ["nodejs_compat", "global_fetch_strictly_public"],
  "observability": {
    "enabled": true
  },
  "upload_source_maps": true,
  "vars": {
    "VALUE_FROM_CLOUDFLARE": "Hello from Cloudflare"
  },
  "assets": {
    "directory": "./public/",
    "binding": "ASSETS"
  },
  "r2_buckets": [
    {
      "bucket_name": "visual-assets",
      "binding": "VISUAL_ASSETS"
    }
  ],
  "durable_objects": {
    "bindings": [
      {
        "name": "KUDOS_DO",
        "class_name": "KudosObject",
        "script_name": "code"
      }
    ]
  },
  "migrations": [
    {
      "tag": "v1",
      "new_classes": ["KudosObject"]
    }
  ],
  "routes": [
    {
      "pattern": "code.charliegleason.com",
      "custom_domain": true
    }
  ],
  "env": {
    "staging": {
      "name": "code-staging",
      "vars": {
        "VALUE_FROM_CLOUDFLARE": "Hello from Cloudflare (Staging)"
      },
      "r2_buckets": [
        {
          "bucket_name": "visual-assets-staging",
          "binding": "VISUAL_ASSETS"
        }
      ],
      "durable_objects": {
        "bindings": [
          {
            "name": "KUDOS_DO",
            "class_name": "KudosObject",
            "script_name": "code-staging"
          }
        ]
      },
      "routes": [
        {
          "pattern": "staging.code.charliegleason.com",
          "custom_domain": true
        }
      ]
    }
  }
}
